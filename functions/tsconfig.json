{
  "compilerOptions": {
    //    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2019",
      "dom"
    ]
  },
  "compileOnSave": true,
  "include": ["src"]
}
